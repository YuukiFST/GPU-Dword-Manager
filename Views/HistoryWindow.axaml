<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GPU_Dword_Manager_Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        Width="600" Height="400"
        x:Class="GPU_Dword_Manager_Avalonia.Views.HistoryWindow"
        Title="Change History"
        WindowStartupLocation="CenterOwner"
        x:DataType="vm:HistoryViewModel"
        SystemDecorations="Full">

    <Design.DataContext>
        <vm:HistoryViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="10">
        <DataGrid Grid.Row="0" ItemsSource="{Binding Changes}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                <DataGridTextColumn Header="Action" Binding="{Binding ActionDescription}" Width="80"/>
                <DataGridTextColumn Header="Key" Binding="{Binding KeyName}" Width="150"/>
                <DataGridTextColumn Header="Old Value" Binding="{Binding OldValueDisplay}" Width="100"/>
                <DataGridTextColumn Header="New Value" Binding="{Binding NewValueDisplay}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Content="Close" HorizontalAlignment="Right" Margin="0,10,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>

